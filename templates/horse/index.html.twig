{% extends 'base.html.twig' %}

{% block title %}Horse index{% endblock %}

{% block body %}
    <h1>Horse index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Race</th>
                <th>Description</th>
                <th>Speed</th>
                <th>Stamina</th>
                <th>Jump_height</th>
                <th>Strength</th>
                <th>Sociability</th>
                <th>Intelligence</th>
                <th>Temperament</th>
                <th>Experience</th>
                <th>Level</th>
                <th>General_stat</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for horse in horses %}
            <tr>
                <td>{{ horse.id }}</td>
                <td>{{ horse.name }}</td>
                <td>{{ horse.race }}</td>
                <td>{{ horse.description }}</td>
                <td>{{ horse.speed }}</td>
                <td>{{ horse.stamina }}</td>
                <td>{{ horse.jumpHeight }}</td>
                <td>{{ horse.strength }}</td>
                <td>{{ horse.sociability }}</td>
                <td>{{ horse.intelligence }}</td>
                <td>{{ horse.temperament }}</td>
                <td>{{ horse.experience }}</td>
                <td>{{ horse.level }}</td>
                <td>{{ horse.generalStat }}</td>
                <td>
                    <a href="{{ path('app_horse_show', {'id': horse.id}) }}">show</a>
                    <a href="{{ path('app_horse_edit', {'id': horse.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="15">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_horse_new') }}">Create new</a>
{% endblock %}
